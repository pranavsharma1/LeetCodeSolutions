class Solution {
    public void reverseString(char[] s) {
        
        int arrayLength = s.length;
        
        int swaps = arrayLength/2;
        
        int lastIndex = arrayLength - 1;
        
        char temp;
        
        for(int i = 0; i < swaps; i++ ){
            
                     temp                 = s[ i ];
                    s[ i ]                = s[ lastIndex - i ];
              s[ lastIndex - i ]          = temp;
            
        }
        
    }
}
